<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="哨关路综合管廊运维系统"
        android:gravity="center"
        android:textSize="20sp"
        android:background="#2291e3"
        android:id="@+id/textview_search"
        android:textColor="#ffffff"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="日 常 巡 查"
        android:background="@drawable/button_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:id="@+id/button_richangxuncha"
        android:textColor="#ffffff"
        android:textSize="18sp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="专 项 检 查"
        android:background="@drawable/button_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:id="@+id/zhuanxiangjiancha"
        android:textColor="#ffffff"
        android:textSize="18sp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="重 点 介 质 检 查"
        android:background="@drawable/button_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:id="@+id/zhongdianjiezhijiancha"/>

</LinearLayout>