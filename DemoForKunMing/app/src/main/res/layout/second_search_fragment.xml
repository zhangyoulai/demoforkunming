<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:background="#f8f8f8"
        android:paddingBottom="5dp">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:id="@+id/search_back_to_main"
            android:src="@drawable/back2"
            android:background="#f8f8f8"
            android:layout_gravity="center"
            android:paddingLeft="8dp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/et_search_content"
            android:hint="搜索"
            android:background="@drawable/serach_input"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:gravity="left|center"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/secondsearch_button"
            android:text="搜索"
            android:background="@drawable/search_button"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"

            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:text=""/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
      />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="28dp"
       android:layout_marginRight="5dp"
       android:layout_marginTop="15dp"
       >
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical">
           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/gas_search"
               android:id="@+id/gas_search"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="  气体"
               android:textSize="16sp"
               android:layout_marginTop="5dp"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           android:layout_marginLeft="10dp"

           >
           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/equipment_search"
               android:id="@+id/equipment_search"

               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="  设备"
               android:textSize="16sp"
               android:layout_marginTop="5dp"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           android:layout_marginLeft="10dp"

           >
           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/node_search"
               android:id="@+id/node_search"

               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="  节点"
               android:textSize="16sp"
               android:layout_marginTop="5dp"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           android:layout_marginLeft="10dp"

           >
           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/line_search"
               android:id="@+id/line_search"

               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="  管线"
               android:textSize="16sp"
               android:layout_marginTop="5dp"/>
       </LinearLayout>

   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/tempreture_search"
                android:id="@+id/tempreture_search"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  温度"
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/more_search"
                android:id="@+id/more_search"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  更多"
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        android:layout_marginTop="5dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="清除搜索历史"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:id="@+id/textview_clear_history"
               android:textColor="#ff0000"
                android:visibility="gone"
                />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/textview_clear_history"
                android:id="@+id/search_history_listview"></ListView>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>